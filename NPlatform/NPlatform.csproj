    <None Remove="CodeGenerate\MySqlEntity.cst" />
    <None Remove="CodeGenerate\OracleEntity.cst" />
    <None Remove="CodeGenerate\OracleEntityView.cst" />
    <None Remove="CodeGenerate\Repository.cst" />
    <None Remove="CodeGenerate\Service.cst" />
    <None Remove="Readme.md" />
    <None Remove="NPlatform.xml" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="CodeGenerate\BuildAll.csp">
